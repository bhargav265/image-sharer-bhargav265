
<div class="album text-muted">
  <div class="container">
    <div class="card-columns">
      <% @images.each do |image| %>
        <div class="card">
          <div class="card-body">
            <% if image.user == current_user %>
            <%= link_to image_tag(image.image.url(:medium), class: 'card-img'), image_path(image)  %>
              <% else %>
            <%= image_tag(image.image.url(:medium), class: 'card-img') %>
            <% end %>
          </div>

          <div class="card-footer bg-transparent border-success">
            <h3> <%= image.name %> </h3> <br>
            <h5> <strong>Location: </strong><%= image.location %> </h5> <br>
            <h5> <strong>Breed: </strong><%= image.breed %> </h5> <br>
            <%= render partial: 'tags', locals: { image: image } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= content_for :stylesheets do %>
  <%= stylesheet_link_tag 'views/images/index' %>
<% end %>
