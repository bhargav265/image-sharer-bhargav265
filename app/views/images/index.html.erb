<%= link_to 'New Image', new_image_path %>

<table border = '1'>
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Link to Image</th>
  </tr>

  <% @images.each do |image| %>
    <tr>
      <td><%= image.id %></td>
      <td><%=link_to image_tag(image.url, height: 400, width: 400), image_path(image) %></td>
      <td><%= link_to 'Show', image_path(image) %></td>
    </tr>
  <% end %>
</table>	